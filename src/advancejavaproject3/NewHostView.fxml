<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="advancejavaproject3.NewHostController"
      spacing="15">

    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <children>
        <Label text="Define New Host" style="-fx-font-size: 18; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <children>
                <Label text="Receive protocol:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <HBox spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <children>
                        <RadioButton fx:id="imapRadio" text="IMAP" selected="true">
                            <toggleGroup>
                                <ToggleGroup fx:id="protocolGroup"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="pop3Radio" text="POP3" toggleGroup="$protocolGroup"/>
                    </children>
                </HBox>

                <Label text="Receive port:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="receivePortField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                           promptText="e.g., 993 for IMAP, 995 for POP3" />

                <Label text="Send port:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="sendPortField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                           promptText="e.g., 465 or 587" />

                <Label text="Host address (Receive):" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="receiveHostField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                           promptText="e.g., imap.gmail.com" />

                <Label text="Host address (Send):" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="sendHostField" GridPane.rowIndex="4" GridPane.columnIndex="1"
                           promptText="e.g., smtp.gmail.com" />

                <Label text="Username:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <TextField fx:id="usernameField" GridPane.rowIndex="5" GridPane.columnIndex="1"
                           promptText="Your email address" />

                <Label text="Password:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                <PasswordField fx:id="passwordField" GridPane.rowIndex="6" GridPane.columnIndex="1" />
            </children>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button fx:id="saveButton" text="Save" prefWidth="100" />
                <Button fx:id="cancelButton" text="Cancel" prefWidth="100" />
            </children>
        </HBox>
    </children>
</VBox>
