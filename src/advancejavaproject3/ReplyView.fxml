<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="advancejavaproject3.ReplyController"
      spacing="10">

    <padding>
        <Insets top="10" left="10" right="10" bottom="10"/>
    </padding>

    <children>
        <Label text="Reply Email" />

        <GridPane hgap="5" vgap="5">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <children>
                <Label text="To:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="toField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Subject:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="subjectField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Attachment:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <Button fx:id="attachButton" text="Attach..." GridPane.rowIndex="2" GridPane.columnIndex="1" />
            </children>
        </GridPane>

        <Label text="Message:" />
        <TextArea fx:id="bodyArea" prefRowCount="10" wrapText="true" VBox.vgrow="ALWAYS" />

        <HBox spacing="10">
            <children>
                <Button fx:id="sendButton" text="Send" />
                <Button fx:id="cancelButton" text="Cancel" />
            </children>
        </HBox>
    </children>
</VBox>
